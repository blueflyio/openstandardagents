#!/usr/bin/env node

/**
 * OSSA Init Utility
 * Quick project initialization
 */

const { execSync } = require('child_process');

const args = process.argv.slice(2);
const name = args[0] || 'my-agent';

console.log(`ðŸš€ Initializing OSSA agent: ${name}`);

try {
  execSync(`ossa init ${name}`, { stdio: 'inherit' });
  console.log('');
  console.log('âœ… Agent initialized!');
  console.log('');
  console.log('Next steps:');
  console.log(`  cd ${name}`);
  console.log('  ossa validate agent.ossa.yaml');
  console.log('  ossa export --to cursor agent.ossa.yaml');
} catch (error) {
  process.exit(1);
}
