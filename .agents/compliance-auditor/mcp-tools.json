{
  "version": "2024-11-05",
  "server": {
    "name": "ossa-compliance-auditor",
    "version": "1.1.0"
  },
  "tools": [
    {
      "name": "compliance_check",
      "description": "Perform comprehensive compliance validation against regulatory frameworks",
      "inputSchema": {
        "type": "object",
        "properties": {
          "framework": {
            "type": "string",
            "enum": ["iso_42001", "nist_ai_rmf", "eu_ai_act"],
            "description": "Compliance framework to check against"
          },
          "target_system": {
            "type": "string",
            "description": "System or component to audit"
          },
          "scope": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Specific controls or requirements to validate"
          },
          "evidence_collection": {
            "type": "boolean",
            "default": true,
            "description": "Whether to collect supporting evidence"
          }
        },
        "required": ["framework", "target_system"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "compliance_status": {
            "type": "string",
            "enum": ["compliant", "non_compliant", "partially_compliant"]
          },
          "compliance_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "findings": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "control_id": {"type": "string"},
                "status": {"type": "string"},
                "evidence": {"type": "string"},
                "gaps": {"type": "array", "items": {"type": "string"}},
                "recommendations": {"type": "array", "items": {"type": "string"}}
              }
            }
          },
          "next_review_date": {
            "type": "string",
            "format": "date"
          }
        }
      }
    },
    {
      "name": "risk_assessment",
      "description": "Conduct comprehensive AI risk assessment",
      "inputSchema": {
        "type": "object",
        "properties": {
          "system_description": {
            "type": "string",
            "description": "Detailed description of the AI system"
          },
          "use_case": {
            "type": "string",
            "description": "Primary use case and deployment context"
          },
          "data_sources": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Data sources used by the system"
          },
          "stakeholders": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Key stakeholders and affected parties"
          },
          "assessment_type": {
            "type": "string",
            "enum": ["initial", "periodic", "change_driven", "incident_triggered"],
            "default": "initial"
          }
        },
        "required": ["system_description", "use_case"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "risk_level": {
            "type": "string",
            "enum": ["minimal", "limited", "high", "unacceptable"]
          },
          "risk_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "risk_categories": {
            "type": "object",
            "properties": {
              "bias_discrimination": {"type": "number"},
              "privacy_violation": {"type": "number"},
              "security_vulnerability": {"type": "number"},
              "safety_hazard": {"type": "number"},
              "transparency_lack": {"type": "number"}
            }
          },
          "mitigation_strategies": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "risk_area": {"type": "string"},
                "strategy": {"type": "string"},
                "priority": {"type": "string"},
                "timeline": {"type": "string"}
              }
            }
          },
          "regulatory_implications": {
            "type": "object",
            "properties": {
              "eu_ai_act_classification": {"type": "string"},
              "iso_42001_requirements": {"type": "array", "items": {"type": "string"}},
              "nist_rmf_functions": {"type": "array", "items": {"type": "string"}}
            }
          }
        }
      }
    },
    {
      "name": "audit_report",
      "description": "Generate comprehensive audit reports in multiple formats",
      "inputSchema": {
        "type": "object",
        "properties": {
          "audit_id": {
            "type": "string",
            "description": "Audit session identifier"
          },
          "report_type": {
            "type": "string",
            "enum": ["executive_summary", "detailed_findings", "compliance_matrix", "gap_analysis"],
            "description": "Type of report to generate"
          },
          "format": {
            "type": "string",
            "enum": ["json", "pdf", "html", "xml"],
            "default": "json"
          },
          "include_evidence": {
            "type": "boolean",
            "default": false,
            "description": "Include supporting evidence in report"
          },
          "confidentiality_level": {
            "type": "string",
            "enum": ["public", "internal", "confidential", "restricted"],
            "default": "internal"
          }
        },
        "required": ["audit_id", "report_type"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "report_id": {"type": "string"},
          "generated_at": {"type": "string", "format": "date-time"},
          "report_url": {"type": "string", "format": "uri"},
          "expires_at": {"type": "string", "format": "date-time"},
          "summary": {
            "type": "object",
            "properties": {
              "total_controls_assessed": {"type": "integer"},
              "compliant_controls": {"type": "integer"},
              "non_compliant_controls": {"type": "integer"},
              "overall_compliance_score": {"type": "number"},
              "critical_findings": {"type": "integer"}
            }
          }
        }
      }
    },
    {
      "name": "framework_mapping",
      "description": "Map controls and requirements across different compliance frameworks",
      "inputSchema": {
        "type": "object",
        "properties": {
          "source_framework": {
            "type": "string",
            "enum": ["iso_42001", "nist_ai_rmf", "eu_ai_act"]
          },
          "target_framework": {
            "type": "string",
            "enum": ["iso_42001", "nist_ai_rmf", "eu_ai_act"]
          },
          "specific_controls": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Specific controls to map (optional)"
          }
        },
        "required": ["source_framework", "target_framework"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "mapping_version": {"type": "string"},
          "mappings": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "source_control": {"type": "string"},
                "target_controls": {"type": "array", "items": {"type": "string"}},
                "mapping_type": {"type": "string", "enum": ["direct", "partial", "conceptual"]},
                "confidence": {"type": "number", "minimum": 0, "maximum": 1},
                "notes": {"type": "string"}
              }
            }
          }
        }
      }
    },
    {
      "name": "evidence_validation",
      "description": "Validate and verify audit evidence for authenticity and completeness",
      "inputSchema": {
        "type": "object",
        "properties": {
          "evidence_id": {
            "type": "string",
            "description": "Unique identifier for evidence item"
          },
          "evidence_type": {
            "type": "string",
            "enum": ["document", "log_file", "configuration", "testimony", "screenshot"]
          },
          "source_system": {
            "type": "string",
            "description": "System that generated the evidence"
          },
          "validation_criteria": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["integrity", "authenticity", "completeness", "relevance", "timeliness"]
            }
          }
        },
        "required": ["evidence_id", "evidence_type"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "validation_status": {
            "type": "string",
            "enum": ["valid", "invalid", "needs_review"]
          },
          "validation_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "checks_performed": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "check_type": {"type": "string"},
                "result": {"type": "boolean"},
                "details": {"type": "string"}
              }
            }
          },
          "cryptographic_hash": {"type": "string"},
          "timestamp_verified": {"type": "boolean"},
          "chain_of_custody": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "actor": {"type": "string"},
                "action": {"type": "string"},
                "timestamp": {"type": "string", "format": "date-time"}
              }
            }
          }
        }
      }
    },
    {
      "name": "continuous_monitoring",
      "description": "Set up continuous monitoring for compliance drift detection",
      "inputSchema": {
        "type": "object",
        "properties": {
          "monitoring_scope": {
            "type": "object",
            "properties": {
              "systems": {"type": "array", "items": {"type": "string"}},
              "frameworks": {"type": "array", "items": {"type": "string"}},
              "controls": {"type": "array", "items": {"type": "string"}}
            }
          },
          "monitoring_frequency": {
            "type": "string",
            "enum": ["real_time", "hourly", "daily", "weekly", "monthly"],
            "default": "daily"
          },
          "alert_thresholds": {
            "type": "object",
            "properties": {
              "compliance_score_drop": {"type": "number"},
              "critical_control_failure": {"type": "boolean"},
              "evidence_staleness_days": {"type": "integer"}
            }
          },
          "notification_channels": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["email", "slack", "webhook", "sms"]
            }
          }
        },
        "required": ["monitoring_scope"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "monitoring_id": {"type": "string"},
          "status": {"type": "string", "enum": ["active", "paused", "error"]},
          "next_check": {"type": "string", "format": "date-time"},
          "baseline_established": {"type": "boolean"},
          "metrics": {
            "type": "object",
            "properties": {
              "systems_monitored": {"type": "integer"},
              "controls_tracked": {"type": "integer"},
              "last_alert": {"type": "string", "format": "date-time"}
            }
          }
        }
      }
    }
  ],
  "resources": [
    {
      "uri": "compliance://frameworks/iso_42001",
      "name": "ISO 42001 Framework",
      "description": "Complete ISO 42001 Artificial Intelligence Management System framework"
    },
    {
      "uri": "compliance://frameworks/nist_ai_rmf",
      "name": "NIST AI Risk Management Framework",
      "description": "NIST AI RMF 1.0 framework with all functions and categories"
    },
    {
      "uri": "compliance://frameworks/eu_ai_act",
      "name": "EU AI Act Requirements",
      "description": "European Union AI Act compliance requirements and classifications"
    },
    {
      "uri": "compliance://templates/audit_checklist",
      "name": "Audit Checklist Templates",
      "description": "Pre-configured audit checklists for different compliance frameworks"
    },
    {
      "uri": "compliance://evidence/storage",
      "name": "Evidence Storage",
      "description": "Secure storage for audit evidence with cryptographic integrity"
    }
  ],
  "prompts": [
    {
      "name": "compliance_assistant",
      "description": "AI-powered compliance guidance and recommendations",
      "arguments": [
        {
          "name": "query",
          "description": "Compliance question or scenario",
          "required": true
        },
        {
          "name": "context",
          "description": "Additional context about the system or organization",
          "required": false
        }
      ]
    },
    {
      "name": "risk_scenario_analysis", 
      "description": "Analyze potential risk scenarios and their implications",
      "arguments": [
        {
          "name": "scenario",
          "description": "Risk scenario description",
          "required": true
        },
        {
          "name": "system_context",
          "description": "System or business context",
          "required": true
        }
      ]
    }
  ]
}