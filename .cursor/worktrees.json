{
  "$schema": "https://json.schemastore.org/cursor-worktrees.json",
  "version": "1.0.0",
  "description": "OSSA Worktrees Configuration - Optimized for monorepo development",
  "basePath": "/Users/flux423/Sites/LLM/OSSA",
  "worktrees": {
    "development": {
      "branch": "development",
      "path": "../ossa-development",
      "description": "Main integration branch - keep clean for testing",
      "priority": 1,
      "autoSync": true,
      "postCheckout": [],
      "environment": {
        "NODE_ENV": "development"
      }
    },
    "main": {
      "branch": "main",
      "path": "../ossa-main",
      "description": "Production-ready code - read-only for releases",
      "priority": 0,
      "readOnly": true
    }
  },
  "templates": {
    "feature": {
      "branchPattern": "feature/*",
      "baseBranch": "development",
      "path": "../ossa-{branch-name}",
      "description": "Feature branch worktree",
      "postCheckout": [],
      "autoCleanup": true,
      "cleanupAfterDays": 30
    },
    "bug": {
      "branchPattern": "bug/*",
      "baseBranch": "development",
      "path": "../ossa-{branch-name}",
      "description": "Bug fix branch worktree",
      "postCheckout": [],
      "autoCleanup": true,
      "cleanupAfterDays": 30
    },
    "hotfix": {
      "branchPattern": "hotfix/*",
      "baseBranch": "main",
      "path": "../ossa-{branch-name}",
      "description": "Hotfix branch worktree",
      "postCheckout": [],
      "priority": 10
    }
  },
  "settings": {
    "maxWorktrees": 10,
    "autoPrune": true,
    "pruneAfterDays": 60,
    "gitConfig": {
      "user.name": "LLM Platform Interactive",
      "user.email": "dev@bluefly.io"
    },
    "notifications": {
      "onCheckout": true,
      "onSync": true,
      "onError": true
    },
    "sync": {
      "enabled": true,
      "interval": "5m",
      "strategy": "rebase"
    }
  },
  "integrations": {
    "gitlab": {
      "enabled": true,
      "projectPath": "llm/openapi-ai-agents-standard",
      "autoCreateMR": false,
      "mrTemplate": "feat"
    }
  },
  "shortcuts": {
    "dev": "development",
    "main": "main"
  },
  "scripts": {
    "setup-all": [],
    "cleanup-stale": [
      "git worktree prune"
    ],
    "sync-all": [
      "git fetch origin",
      "git worktree list"
    ]
  }
}
