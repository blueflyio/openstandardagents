{
  "name": "@ossa/version-management",
  "version": "0.4.0-dev.1",
  "description": "Production-grade version management for OSSA projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ossa-version": "dist/cli/index.js"
  },
  "scripts": {
    "generate:types": "openapi-typescript ../../openapi/version-management/openapi.yaml -o src/types/api.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "validate": "npm run lint && npm run test && npm run build",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "ossa",
    "version",
    "semver",
    "placeholder",
    "substitution"
  ],
  "author": "OSSA Community",
  "license": "Apache-2.0",
  "dependencies": {
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "semver": "^7.5.4",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fast-glob": "^3.3.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/semver": "^7.5.6",
    "@types/jest": "^29.5.11",
    "@types/express": "^4.17.21",
    "openapi-typescript": "^6.7.3",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
