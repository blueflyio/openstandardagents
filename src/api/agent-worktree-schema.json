{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ossa.bluefly.io/schemas/agent-worktree/v0.1.8",
  "title": "OSSA Agent Worktree Configuration",
  "description": "Schema for git worktree integration with branch awareness in OSSA agents",
  "type": "object",
  "required": ["agent", "git", "ossa"],
  "properties": {
    "agent": {
      "type": "object",
      "description": "Agent-specific configuration",
      "required": ["name", "version", "phase", "priority"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^([a-z0-9]+-)?(([a-z0-9]+)-([a-z0-9]+))(-[a-z0-9]+)?$",
          "description": "Agent name following OSSA naming convention: [scope-]domain-role[-framework]"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9]+)?$",
          "description": "OSSA version (semantic versioning)"
        },
        "phase": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4,
          "description": "Development phase (1-4)"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Agent priority level"
        },
        "specialization": {
          "type": "string",
          "enum": [
            "cli-infrastructure",
            "industrial-protocols", 
            "production-analytics",
            "multi-modal",
            "security-framework",
            "knowledge-management",
            "quality-assurance",
            "coordination"
          ],
          "description": "Agent specialization area"
        },
        "baseBranch": {
          "type": "string",
          "description": "Base branch for development"
        },
        "featureBranch": {
          "type": "string",
          "description": "Feature branch for this agent"
        },
        "workingDirectory": {
          "type": "string",
          "format": "uri-reference",
          "description": "Worktree working directory path"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of dependent agent names"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Worktree creation timestamp"
        }
      }
    },
    "git": {
      "type": "object",
      "description": "Git worktree configuration",
      "required": ["repository", "worktreePath", "branch"],
      "properties": {
        "repository": {
          "type": "string",
          "format": "uri-reference",
          "description": "Path to git repository"
        },
        "worktreePath": {
          "type": "string",
          "format": "uri-reference",
          "description": "Path to worktree directory"
        },
        "branch": {
          "type": "string",
          "description": "Current git branch"
        },
        "branchType": {
          "type": "string",
          "enum": ["feature", "hotfix", "experiment", "integration", "dependency", "performance", "security", "quality", "docs", "refactor"],
          "description": "Type of git branch"
        },
        "autoCommit": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic commits"
        },
        "autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic synchronization with remote"
        },
        "commitPrefix": {
          "type": "string",
          "description": "Prefix for commit messages"
        },
        "mergeTarget": {
          "type": "string",
          "description": "Target branch for merging"
        },
        "canAutoMerge": {
          "type": "boolean",
          "default": false,
          "description": "Whether this branch can be automatically merged"
        },
        "requiresReview": {
          "type": "boolean",
          "default": true,
          "description": "Whether this branch requires code review before merging"
        }
      }
    },
    "ossa": {
      "type": "object",
      "description": "OSSA compliance configuration",
      "required": ["version", "compliance"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "OSSA specification version"
        },
        "compliance": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+\\.\\d+\\+?$",
          "description": "OSSA compliance level"
        },
        "namingConvention": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+\\.\\d+$",
          "description": "Naming convention version"
        },
        "discoveryEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable UADP discovery"
        }
      }
    },
    "flow": {
      "type": "object",
      "description": "Agentic flow configuration",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["sequential", "parallel", "adaptive", "cascade", "experimental"],
          "description": "Agentic flow type"
        },
        "coordinationLevel": {
          "type": "string",
          "enum": ["autonomous", "supervised", "collaborative"],
          "description": "Level of coordination required"
        },
        "branchLifecycle": {
          "type": "string",
          "enum": ["ephemeral", "persistent", "conditional"],
          "description": "Branch lifecycle management"
        },
        "mergeStrategy": {
          "type": "string",
          "enum": ["fast-forward", "merge-commit", "squash", "rebase"],
          "description": "Merge strategy for integration"
        },
        "conflictResolution": {
          "type": "string",
          "enum": ["agent-priority", "timestamp", "human-review", "ai-mediated"],
          "description": "Conflict resolution strategy"
        },
        "currentState": {
          "type": "string",
          "description": "Current state in the agentic flow"
        },
        "transitions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from": {"type": "string"},
              "to": {"type": "string"},
              "trigger": {"type": "string"},
              "timestamp": {"type": "string", "format": "date-time"},
              "success": {"type": "boolean"}
            }
          },
          "description": "Flow state transition history"
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Agent performance metrics",
      "properties": {
        "completionRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Task completion rate (0-1)"
        },
        "errorRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Error rate (0-1)"
        },
        "conflictRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Git conflict rate (0-1)"
        },
        "agentUtilization": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Agent utilization rate (0-1)"
        },
        "timeToCompletion": {
          "type": "number",
          "minimum": 0,
          "description": "Average time to completion in hours"
        },
        "lastSync": {
          "type": "string",
          "format": "date-time",
          "description": "Last synchronization timestamp"
        },
        "commits": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of commits made"
        },
        "linesOfCode": {
          "type": "integer",
          "minimum": 0,
          "description": "Lines of code contributed"
        }
      }
    },
    "coordination": {
      "type": "object",
      "description": "Multi-agent coordination configuration",
      "properties": {
        "coordinatorAgent": {
          "type": "string",
          "description": "Name of the coordinating agent"
        },
        "peerAgents": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of peer agents in the same workgroup"
        },
        "dependentAgents": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of agents that depend on this agent"
        },
        "integrationBranch": {
          "type": "string",
          "description": "Integration branch for coordinated work"
        },
        "syncSchedule": {
          "type": "string",
          "enum": ["immediate", "hourly", "daily", "on-completion"],
          "description": "Synchronization schedule with other agents"
        },
        "conflictResolutionPriority": {
          "type": "integer",
          "minimum": 1,
          "description": "Priority for conflict resolution (higher number = higher priority)"
        }
      }
    },
    "workspace": {
      "type": "object",
      "description": "OSSA workspace configuration",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique workspace identifier"
        },
        "version": {
          "type": "string",
          "description": "Workspace version"
        },
        "agents": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of agents in this workspace"
        },
        "orchestration": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "coordinator": {"type": "string"},
            "priority": {"type": "string"},
            "phase": {"type": "integer"}
          }
        }
      }
    }
  },
  "additionalProperties": false
}