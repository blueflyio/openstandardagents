{
  "mcpServers": {
    "ossa": {
      "command": "npx",
      "args": ["@ossa/mcp-server"],
      "env": {
        "OSSA_PROJECT_ROOT": ".",
        "OSSA_COMPLIANCE_LEVEL": "governed",
        "OSSA_API_URL": "https://api.ossa.dev/v2",
        "OSSA_VOICE_ENABLED": "true",
        "OSSA_MCP_EVENTS": "true",
        "NODE_ENV": "development"
      }
    }
  },
  "project": {
    "name": "OSSA Project",
    "description": "Open Standards for Scalable Agents project with Claude Desktop integration",
    "version": "0.2.0",
    "type": "ossa-platform"
  },
  "agents": {
    "directory": ".agents",
    "registry": ".agents/registry.yml",
    "templates": "src/templates/",
    "schemas": "src/schemas/"
  },
  "compliance": {
    "level": "governed",
    "standards": ["OSSA v0.2.0", "ISO 42001", "NIST AI RMF"],
    "validation": {
      "strict": true,
      "auto_fix": false,
      "test_coverage": 80
    }
  },
  "features": {
    "voice_agents": true,
    "mcp_protocol": true,
    "real_time_dashboard": true,
    "compliance_testing": true,
    "agent_lifecycle": true
  },
  "development": {
    "test_framework": "jest",
    "linting": "eslint",
    "formatting": "prettier",
    "ci_cd": "gitlab"
  }
}
