# PRODUCTION Dockerfile for OSSA Agent Runner
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json tsconfig.json ./
COPY src ./src

# Install dependencies and build
RUN npm ci && \
    npm run build

# Production image
FROM node:20-alpine

WORKDIR /app

# Copy built files and dependencies
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./

# Create non-root user
RUN addgroup -g 1001 -S ossa && \
    adduser -S -D -H -u 1001 -h /app -s /sbin/nologin -G ossa -g ossa ossa && \
    chown -R ossa:ossa /app

USER ossa

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD node -e "require('http').get('http://localhost:' + (process.env.PORT || 4000) + '/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1))"

ENTRYPOINT ["node", "dist/runtime/agent-runner.js"]
