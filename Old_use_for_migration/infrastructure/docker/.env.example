# OSSA v0.1.8 Environment Configuration

# Application Configuration
NODE_ENV=development
OSSA_VERSION=0.1.8
LOG_LEVEL=info

# Network Configuration
DOCKER_NETWORK=ossa-network
COMPOSE_PROJECT_NAME=ossa

# Service Ports
GATEWAY_PORT=3000
TASK_AGENT_PORT=3001
COMM_AGENT_PORT=3002
MCP_AGENT_PORT=3003
COORDINATION_PORT=3010
DISCOVERY_PORT=3011
ORCHESTRATION_PORT=3012
MONITORING_PORT=3013

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ossa
POSTGRES_USER=ossa
POSTGRES_PASSWORD=ossa_dev_password
POSTGRES_URL=postgresql://ossa:ossa_dev_password@postgres:5432/ossa

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Qdrant Vector Database Configuration
QDRANT_HOST=qdrant
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_URL=http://qdrant:6333

# Monitoring Configuration
PROMETHEUS_PORT=9091
GRAFANA_PORT=3080
ALERTMANAGER_PORT=9093
NODE_EXPORTER_PORT=9100

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=ossa-monitor-2025
GF_USERS_ALLOW_SIGN_UP=false

# Service Discovery Configuration
DISCOVERY_PATHS=./src,./agents,./modules
DISCOVERY_AUTO_SCAN=true
DISCOVERY_SCAN_INTERVAL=60000

# Agent Configuration
AGENT_REGISTRY_SIZE=1000
AGENT_HEARTBEAT_INTERVAL=30000
AGENT_TIMEOUT=60000

# Orchestration Configuration
MAX_CONCURRENT_WORKFLOWS=50
WORKFLOW_TIMEOUT=300000
WORKFLOW_RETRY_ATTEMPTS=3

# Security Configuration
API_KEY_ENABLED=true
API_KEY=ossa-dev-key-2025
JWT_SECRET=ossa-jwt-secret-change-in-production
CORS_ORIGIN=*

# Performance Configuration
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=10000
CACHE_TTL=3600

# Development Configuration
DEBUG_MODE=true
HOT_RELOAD=true
API_DOCS_ENABLED=true

# External Services
WEBHOOK_BASE_URL=http://localhost:3000
NOTIFICATION_ENABLED=false
METRICS_ENABLED=true