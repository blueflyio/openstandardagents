{
  "name": "ossa-website",
  "version": "0.3.1",
  "description": "Open Standard Agents - The OpenAPI for AI Agents",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "NODE_ENV=production next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "sync": "tsx lib/data/sync-all.ts",
    "sync:examples": "tsx lib/data/fetch-examples.ts",
    "sync:versions": "tsx lib/data/fetch-versions.ts",
    "test": "echo 'No unit tests yet' && exit 0",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:visual": "playwright test tests/visual",
    "test:visual:update": "playwright test tests/visual --update-snapshots",
    "test:all": "playwright test",
    "test:contracts": "tsx tests/contracts/ossa-spec.test.ts"
  },
  "keywords": [
    "ossa",
    "ai-agents",
    "standard",
    "specification"
  ],
  "author": "OSSA Community",
  "license": "MIT",
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.22",
    "critters": "^0.0.23",
    "gray-matter": "^4.0.3",
    "next": "^15.5.6",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.5.6",
    "sass": "^1.94.2",
    "tsx": "^4.19.0"
  }
}
