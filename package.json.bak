{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.9",
  "description": "OSSA v0.1.9 - Open Standards for Scalable Agents Specification",
  "type": "module",
  "main": "dist/types/index.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "ossa": "./bin/ossa",
    "ossa-deploy": "./bin/ossa-deploy"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc && chmod +x dist/cli/*.js",
    "build:cli": "tsc && chmod +x dist/cli/*.js && npm link",
    "build:server": "tsc && npm run generate:client",
    "build:all": "npm run build:server && npm run build:cli",
    "start": "node dist/server/simple-app.js",
    "start:complex": "node dist/server/app.js",
    "start:dev": "nodemon --exec ts-node src/server/app.ts",
    "start:prod": "NODE_ENV=production npm start",
    "generate:client": "openapi-typescript src/api/core/ossa-complete.openapi.yml -o src/types/api-client.ts",
    "generate:docs": "swagger-cli validate src/api/core/ossa-complete.openapi.yml && echo 'OpenAPI 3.1 validation passed'",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "api:generate": "openapi-typescript src/api/core/specification.openapi.yml -o src/types/api.ts",
    "api:validate": "npx @redocly/cli lint src/api/core/specification.openapi.yml",
    "api:validate:complete": "npx @redocly/cli lint src/api/core/ossa-complete.openapi.yml --config .redocly.yaml",
    "api:validate:all": "npx @redocly/cli lint src/api/core/*.openapi.yml src/api/project/*.openapi.yml src/api/mcp/*.openapi.yml src/api/legacy/*.openapi.yml",
    "api:validate:ecosystem": "cd ../agent_buildkit && npm run ecosystem:validate",
    "api:bundle": "npx @redocly/cli bundle src/api/core/ossa-complete.openapi.yml --output dist/ossa-complete.json",
    "api:bundle:all": "mkdir -p dist/bundles && npx @redocly/cli bundle src/api/core/ossa-complete.openapi.yml --output dist/bundles/ossa-complete.json",
    "api:docs": "npx @redocly/cli preview-docs",
    "api:docs:build": "npx @redocly/cli build-docs --output dist/api-docs",
    "api:docs:serve": "npx @redocly/cli preview-docs",
    "validate:specs": "npm run api:validate && npm run api:validate:complete && npm run api:validate:all && npm run validate:schemas",
    "validate:schemas": "tsx src/cli/validate-schemas.ts",
    "ossa:dev": "tsx src/cli/ossa-cli.ts",
    "ossa:agent": "tsx src/cli/ossa-cli.ts agent",
    "ossa:validate": "tsx src/cli/ossa-cli.ts validate",
    "ossa:build": "tsx src/cli/ossa-cli.ts build",
    "cli:link": "npm link",
    "cli:unlink": "npm unlink -g @ossa/specification",
    "deploy:agents": "ossa-deploy deploy --all",
    "server:health": "curl -f http://localhost:3000/health || exit 1",
    "server:docs": "open http://localhost:3000/docs",
    "precommit": "npm run lint && npm run test",
    "clean": "node -e \"const fs=require('fs'); ['dist','coverage'].forEach(d => fs.rmSync(d, {recursive:true, force:true}))\"",
    "test:acdl": "node dist/cli/ossa-cli.js test --all",
    "mock:server:bg": "node dist/server/simple-app.js &",
    "agents:spawn:tdd": "node dist/cli/ossa-cli.js spawn --type tdd",
    "agents:spawn:validation": "node dist/cli/ossa-cli.js spawn --type validation",
    "agents:workload": "node dist/cli/ossa-cli.js workload",
    "test:with-mock": "MOCK_MODE=true npm test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ossa",
    "specification",
    "standard",
    "openapi",
    "ai-agents",
    "acdl",
    "protocol"
  ],
  "author": "Bluefly.io",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "compression": "^1.7.4",
    "core-js": "^3.45.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "ora": "^9.0.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@redocly/cli": "^2.1.5",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
