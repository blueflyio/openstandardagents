{
  "$id": "https://ossa.dev/schema/components/constraints.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OSSA Constraints Component",
  "description": "Reusable constraints block for OSSA resources",
  "type": "object",
  "properties": {
    "performance": {
      "type": "object",
      "properties": {
        "maxLatencySeconds": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum acceptable latency in seconds"
        },
        "timeoutSeconds": {
          "type": "number",
          "minimum": 0,
          "description": "Request timeout in seconds"
        },
        "maxConcurrency": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum concurrent executions"
        }
      }
    },
    "cost": {
      "type": "object",
      "properties": {
        "maxTokensPerRequest": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum tokens per request"
        },
        "maxTokensPerDay": {
          "type": "integer",
          "minimum": 1,
          "description": "Daily token budget"
        },
        "maxCostPerRequest": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum cost per request in USD"
        }
      }
    },
    "safety": {
      "type": "object",
      "properties": {
        "maxTurns": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum conversation turns"
        },
        "maxToolCalls": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum tool calls per turn"
        },
        "requireHumanApproval": {
          "type": "boolean",
          "description": "Require human approval for actions"
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "maxMemoryMB": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum memory in megabytes"
        },
        "maxCpuCores": {
          "type": "number",
          "minimum": 0.1,
          "description": "Maximum CPU cores"
        }
      }
    }
  },
  "additionalProperties": false
}
