{
  "$id": "https://ossa.dev/schema/components/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OSSA Identity Component",
  "description": "Reusable identity block for OSSA agent instances",
  "type": "object",
  "properties": {
    "instance_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this agent instance"
    },
    "interaction_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this interaction/session"
    },
    "parent_instance_id": {
      "type": "string",
      "format": "uuid",
      "description": "Parent agent instance ID for multi-agent scenarios"
    },
    "workflow_id": {
      "type": "string",
      "format": "uuid",
      "description": "Workflow execution ID"
    },
    "trace_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{32}$",
      "description": "W3C Trace ID for distributed tracing"
    },
    "span_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{16}$",
      "description": "W3C Span ID for distributed tracing"
    },
    "tenant_id": {
      "type": "string",
      "description": "Multi-tenant environment identifier"
    },
    "user_id": {
      "type": "string",
      "description": "Initiating user identifier"
    }
  },
  "additionalProperties": false
}
