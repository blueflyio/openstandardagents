{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openstandardagents.org/schemas/v0.3.0/components/dependencies.json",
  "title": "Agent Dependencies Schema",
  "description": "Declares dependencies on other agents, services, and MCP servers for multi-agent orchestration",
  "type": "object",
  "properties": {
    "agents": {
      "type": "array",
      "description": "Dependencies on other OSSA agents",
      "items": {
        "$ref": "#/definitions/AgentDependency"
      }
    },
    "services": {
      "type": "array",
      "description": "Dependencies on external services (APIs, databases, etc.)",
      "items": {
        "$ref": "#/definitions/ServiceDependency"
      }
    },
    "mcp": {
      "type": "array",
      "description": "Dependencies on Model Context Protocol servers",
      "items": {
        "$ref": "#/definitions/MCPDependency"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "AgentDependency": {
      "type": "object",
      "required": ["name", "version", "required"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "maxLength": 253,
          "description": "Agent name (must match metadata.name in target agent manifest)"
        },
        "version": {
          "type": "string",
          "description": "Semantic version constraint (npm semver format: ^1.2.0, >=1.0.0 <2.0.0, *)",
          "examples": ["^1.2.0", ">=2.0.0 <3.0.0", "*", "~1.5.0"]
        },
        "required": {
          "type": "boolean",
          "description": "Whether this dependency is required (true) or optional (false)"
        },
        "reason": {
          "type": "string",
          "maxLength": 500,
          "description": "Human-readable explanation of why this dependency exists"
        },
        "contract": {
          "type": "object",
          "description": "Expected contract (events, commands) from the dependency",
          "properties": {
            "publishes": {
              "type": "array",
              "description": "Events this agent expects the dependency to publish",
              "items": {
                "type": "string",
                "description": "Channel name (e.g., security.vulnerability.detected)"
              }
            },
            "commands": {
              "type": "array",
              "description": "Commands this agent expects the dependency to expose",
              "items": {
                "type": "string",
                "description": "Command name (e.g., fix_vulnerability)"
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "ServiceDependency": {
      "type": "object",
      "required": ["name", "required"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Service name (e.g., gitlab-api, prometheus, postgresql)"
        },
        "version": {
          "type": "string",
          "description": "Service version or API version (e.g., v4, >=2.0)"
        },
        "endpoint": {
          "type": "string",
          "description": "Service endpoint URL (can use environment variable substitution: ${GITLAB_API_URL})"
        },
        "required": {
          "type": "boolean",
          "description": "Whether this service dependency is required"
        },
        "reason": {
          "type": "string",
          "maxLength": 500,
          "description": "Human-readable explanation of why this service is needed"
        }
      },
      "additionalProperties": false
    },
    "MCPDependency": {
      "type": "object",
      "required": ["name", "required"],
      "properties": {
        "name": {
          "type": "string",
          "description": "MCP server name (e.g., jira-mcp, slack-mcp)"
        },
        "version": {
          "type": "string",
          "description": "MCP server version constraint (semver format)"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "MCP server URL (can use environment variable substitution)"
        },
        "required": {
          "type": "boolean",
          "description": "Whether this MCP server is required"
        },
        "tools": {
          "type": "array",
          "description": "List of MCP tools this agent uses from this server",
          "items": {
            "type": "string",
            "description": "Tool name (e.g., getJiraIssue, createSlackMessage)"
          }
        },
        "reason": {
          "type": "string",
          "maxLength": 500,
          "description": "Human-readable explanation of why this MCP server is needed"
        }
      },
      "additionalProperties": false
    }
  }
}
