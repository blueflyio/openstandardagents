{
  "$id": "https://ossa.dev/schema/components/tool.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OSSA Tool Component",
  "description": "Reusable tool definition for OSSA agents",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["mcp", "http", "function", "kubernetes"],
      "description": "Tool integration type"
    },
    "name": {
      "type": "string",
      "description": "Unique tool identifier"
    },
    "description": {
      "type": "string",
      "description": "Human-readable tool description"
    },
    "server": {
      "type": "string",
      "description": "MCP server name (for type: mcp)"
    },
    "namespace": {
      "type": "string",
      "description": "Tool namespace for grouping"
    },
    "endpoint": {
      "type": "string",
      "format": "uri",
      "description": "HTTP endpoint (for type: http)"
    },
    "capabilities": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of capability identifiers"
    },
    "config": {
      "type": "object",
      "additionalProperties": true,
      "description": "Tool-specific configuration"
    },
    "auth": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["none", "bearer", "basic", "api-key", "oauth2"]
        },
        "credentials": {
          "type": "string",
          "description": "Reference to credentials secret"
        }
      }
    },
    "input_schema": {
      "type": "object",
      "description": "JSON Schema for tool input parameters"
    }
  },
  "required": ["type"],
  "additionalProperties": false
}
