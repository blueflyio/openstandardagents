{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://open-standards-scalable-agents.org/schemas/v0.1.2/agent-governed.json",
  "title": "OSSA Governed Agent Schema",
  "description": "Governed level OSSA agent specification for enterprise deployment",
  "allOf": [
    {
      "$ref": "../core/agent-core.json"
    },
    {
      "properties": {
        "metadata": {
          "properties": {
            "labels": {
              "properties": {
                "tier": {
                  "const": "governed"
                }
              }
            },
            "annotations": {
              "properties": {
                "ossa.io/conformance-level": {
                  "const": "governed"
                }
              }
            }
          }
        },
        "spec": {
          "properties": {
            "capabilities": {
              "items": {
                "properties": {
                  "input_schema": {
                    "type": "string",
                    "description": "Path to input JSON Schema"
                  },
                  "output_schema": {
                    "type": "string",
                    "description": "Path to output JSON Schema"
                  },
                  "sla": {
                    "type": "object",
                    "properties": {
                      "response_time_ms": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "Maximum response time in milliseconds"
                      },
                      "availability": {
                        "type": "string",
                        "pattern": "^[0-9]+\\.[0-9]+%$",
                        "description": "Availability SLA (e.g., 99.9%)"
                      },
                      "throughput": {
                        "type": "object",
                        "properties": {
                          "requests_per_minute": {
                            "type": "integer",
                            "minimum": 1
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "security": {
              "type": "object",
              "required": ["authentication"],
              "properties": {
                "authentication": {
                  "type": "object",
                  "required": ["required"],
                  "properties": {
                    "required": {
                      "type": "boolean",
                      "default": true
                    },
                    "methods": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": ["api_key", "jwt", "oauth2", "mtls", "custom"]
                      },
                      "minItems": 1
                    },
                    "providers": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "authorization": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false
                    },
                    "model": {
                      "type": "string",
                      "enum": ["rbac", "abac", "custom"],
                      "description": "Authorization model"
                    },
                    "policies": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["role", "permissions"],
                        "properties": {
                          "role": {
                            "type": "string"
                          },
                          "permissions": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "encryption": {
                  "type": "object",
                  "properties": {
                    "in_transit": {
                      "type": "boolean",
                      "default": true,
                      "description": "Encrypt data in transit"
                    },
                    "at_rest": {
                      "type": "boolean",
                      "default": false,
                      "description": "Encrypt data at rest"
                    },
                    "algorithms": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": ["AES-256", "RSA-2048", "ECDSA", "custom"]
                      }
                    }
                  }
                }
              }
            },
            "orchestration": {
              "type": "object",
              "properties": {
                "patterns": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["sequential", "parallel", "fanout", "circuit_breaker", "saga", "pipeline"]
                  },
                  "description": "Supported orchestration patterns"
                },
                "timeout": {
                  "type": "string",
                  "pattern": "^[0-9]+[smh]$",
                  "default": "30s",
                  "description": "Orchestration timeout"
                },
                "retry": {
                  "type": "object",
                  "properties": {
                    "max_attempts": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 10,
                      "default": 3
                    },
                    "backoff_strategy": {
                      "type": "string",
                      "enum": ["linear", "exponential", "fixed"],
                      "default": "exponential"
                    },
                    "initial_delay": {
                      "type": "string",
                      "pattern": "^[0-9]+[smh]$",
                      "default": "1s"
                    }
                  }
                },
                "circuit_breaker": {
                  "type": "object",
                  "properties": {
                    "failure_threshold": {
                      "type": "integer",
                      "minimum": 1,
                      "default": 5
                    },
                    "recovery_timeout": {
                      "type": "string",
                      "pattern": "^[0-9]+[smh]$",
                      "default": "60s"
                    }
                  }
                }
              }
            },
            "monitoring": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                },
                "metrics": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["response_time", "throughput", "error_rate", "availability", "resource_usage"]
                  }
                },
                "alerts": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "condition", "threshold"],
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "condition": {
                        "type": "string",
                        "enum": ["greater_than", "less_than", "equals"]
                      },
                      "threshold": {
                        "type": "number"
                      },
                      "duration": {
                        "type": "string",
                        "pattern": "^[0-9]+[smh]$"
                      }
                    }
                  }
                }
              }
            },
            "api": {
              "type": "object",
              "properties": {
                "openapi": {
                  "type": "string",
                  "description": "Path to OpenAPI specification"
                },
                "base_path": {
                  "type": "string",
                  "description": "API base path"
                },
                "rate_limiting": {
                  "type": "object",
                  "properties": {
                    "requests_per_minute": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "burst_size": {
                      "type": "integer",
                      "minimum": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}