{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://open-standards-scalable-agents.org/schemas/v0.1.2/index.json",
  "title": "OSSA Schema Index",
  "description": "Index of all OSSA v0.1.2 schemas and their relationships",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "0.1.2"
    },
    "schemas": {
      "type": "object",
      "properties": {
        "core": {
          "type": "object",
          "properties": {
            "agent": {
              "type": "object",
              "properties": {
                "schema_url": {
                  "type": "string",
                  "const": "https://open-standards-scalable-agents.org/schemas/v0.1.2/agent-core.json"
                },
                "local_path": {
                  "type": "string",
                  "const": "./core/agent-core.json"
                },
                "description": {
                  "type": "string",
                  "const": "Core level agent specification for basic interoperability"
                },
                "conformance_level": {
                  "type": "string",
                  "const": "core"
                },
                "extends": {
                  "type": "null"
                }
              }
            },
            "workspace": {
              "type": "object",
              "properties": {
                "schema_url": {
                  "type": "string",
                  "const": "https://open-standards-scalable-agents.org/schemas/v0.1.2/workspace.json"
                },
                "local_path": {
                  "type": "string",
                  "const": "./core/workspace.json"
                },
                "description": {
                  "type": "string",
                  "const": "Workspace configuration for multi-agent orchestration"
                }
              }
            },
            "orchestration_rules": {
              "type": "object",
              "properties": {
                "schema_url": {
                  "type": "string",
                  "const": "https://open-standards-scalable-agents.org/schemas/v0.1.2/orchestration-rules.json"
                },
                "local_path": {
                  "type": "string",
                  "const": "./core/orchestration-rules.json"
                },
                "description": {
                  "type": "string",
                  "const": "Orchestration rules for multi-agent coordination patterns"
                }
              }
            },
            "conformance_profile": {
              "type": "object",
              "properties": {
                "schema_url": {
                  "type": "string",
                  "const": "https://open-standards-scalable-agents.org/schemas/v0.1.2/conformance-profile.json"
                },
                "local_path": {
                  "type": "string",
                  "const": "./core/conformance-profile.json"
                },
                "description": {
                  "type": "string",
                  "const": "Conformance profile defining requirements and validation rules"
                }
              }
            }
          }
        },
        "governed": {
          "type": "object",
          "properties": {
            "agent": {
              "type": "object",
              "properties": {
                "schema_url": {
                  "type": "string",
                  "const": "https://open-standards-scalable-agents.org/schemas/v0.1.2/agent-governed.json"
                },
                "local_path": {
                  "type": "string",
                  "const": "./governed/agent-governed.json"
                },
                "description": {
                  "type": "string",
                  "const": "Governed level agent specification for enterprise deployment"
                },
                "conformance_level": {
                  "type": "string",
                  "const": "governed"
                },
                "extends": {
                  "type": "string",
                  "const": "./core/agent-core.json"
                }
              }
            }
          }
        },
        "advanced": {
          "type": "object",
          "properties": {
            "agent": {
              "type": "object",
              "properties": {
                "schema_url": {
                  "type": "string",
                  "const": "https://open-standards-scalable-agents.org/schemas/v0.1.2/agent-advanced.json"
                },
                "local_path": {
                  "type": "string",
                  "const": "./advanced/agent-advanced.json"
                },
                "description": {
                  "type": "string",
                  "const": "Advanced level agent specification with full regulatory compliance"
                },
                "conformance_level": {
                  "type": "string",
                  "const": "advanced"
                },
                "extends": {
                  "type": "string",
                  "const": "./governed/agent-governed.json"
                }
              }
            }
          }
        }
      }
    },
    "migration": {
      "type": "object",
      "properties": {
        "supported_sources": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "oaas/v0.1.1",
            "langchain",
            "crewai", 
            "openai-assistant",
            "anthropic-mcp",
            "autogen",
            "custom"
          ]
        },
        "migration_paths": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "target_level": {
                "type": "string",
                "enum": ["core", "governed", "advanced"]
              },
              "automated": {
                "type": "boolean"
              },
              "complexity": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              }
            }
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "tools": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["cli", "api", "library", "service"]
              },
              "supports": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["schema", "conformance", "framework", "compliance"]
                }
              }
            }
          }
        }
      }
    }
  }
}