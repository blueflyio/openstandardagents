{
  "$schema": "https://openstandardagents.org/schemas/conformance-profile.json",
  "id": "baseline",
  "name": "Baseline",
  "version": "0.3.5",
  "description": "Minimal OSSA v0.3 compliance - Linux Foundation adoption ready",
  "required": {
    "features": [
      "metadata.name",
      "metadata.version",
      "spec.identity.id",
      "spec.role"
    ],
    "weight": 100
  },
  "optional": {
    "features": [
      "metadata.labels",
      "metadata.annotations"
    ],
    "weight": 0
  },
  "scoring": {
    "pass_threshold": 100,
    "warn_threshold": 80
  }
}
