{
  "$schema": "https://openstandardagents.org/schemas/conformance-profile.json",
  "id": "enterprise",
  "name": "Enterprise",
  "extends": "baseline",
  "version": "0.3.5",
  "description": "Production-ready features for enterprise deployment",
  "required": {
    "features": [
      "metadata.name",
      "metadata.version",
      "spec.identity.id",
      "spec.role",
      "spec.completion",
      "spec.checkpointing",
      "spec.monitoring",
      "spec.security"
    ],
    "weight": 70
  },
  "optional": {
    "features": [
      "spec.extensions.moe",
      "spec.extensions.feedback_loops",
      "spec.extensions.bat"
    ],
    "weight": 30
  },
  "scoring": {
    "pass_threshold": 85,
    "warn_threshold": 70
  }
}
