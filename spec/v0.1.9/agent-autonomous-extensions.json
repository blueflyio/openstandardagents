{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://open-standards-scalable-agents.org/schemas/v0.1.9/agent-autonomous-extensions.json",
  "title": "OSSA Autonomous Agent Extensions v0.1.9",
  "description": "Extensions to OSSA agent schema for autonomous agent capabilities",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["open-standards-scalable-agents/v0.1.9"],
      "description": "OSSA API version"
    },
    "kind": {
      "type": "string",
      "enum": ["Agent"],
      "description": "Resource type"
    },
    "metadata": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "description": "Agent name (kebab-case)"
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version"
        },
        "description": {
          "type": "string",
          "description": "Agent description"
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["type", "capabilities"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["worker", "orchestrator", "critic", "integrator"],
          "description": "Agent type"
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Agent capabilities"
        },
        "autonomous": {
          "type": "boolean",
          "description": "Enable autonomous operation",
          "default": false
        },
        "auto_claim_issues": {
          "type": "boolean",
          "description": "Automatically claim unclaimed issues",
          "default": false
        },
        "max_concurrent_tasks": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum concurrent tasks"
        },
        "gitlab": {
          "type": "object",
          "properties": {
            "project_id": {
              "type": "string",
              "description": "GitLab project ID or path"
            },
            "epic_id": {
              "type": "integer",
              "description": "GitLab epic ID for task grouping"
            },
            "milestone_id": {
              "type": "integer",
              "description": "GitLab milestone ID"
            },
            "labels": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Labels to filter issues"
            }
          },
          "required": ["project_id"]
        },
        "thinking_stages": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "PROBLEM_DEFINITION",
              "RESEARCH",
              "ANALYSIS",
              "SYNTHESIS",
              "IMPLEMENTATION",
              "VALIDATION",
              "REFLECTION",
              "CONCLUSION"
            ]
          },
          "description": "Sequential thinking stages"
        },
        "task": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Task title"
            },
            "description": {
              "type": "string",
              "description": "Task description"
            },
            "files": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Files to work on"
            },
            "dependencies": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Package dependencies"
            },
            "success_criteria": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Success criteria"
            },
            "estimated_effort": {
              "type": "string",
              "description": "Estimated effort"
            },
            "priority": {
              "type": "string",
              "enum": ["P0", "P1", "P2", "P3"],
              "description": "Task priority"
            }
          }
        },
        "coordination": {
          "type": "object",
          "description": "Orchestrator coordination settings",
          "properties": {
            "worker_agents": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Worker agent names to coordinate"
            },
            "workflow": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "phases": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "parallel": {
                        "type": "boolean"
                      },
                      "depends_on": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "tasks": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "agent": {
                              "type": "string"
                            },
                            "task": {
                              "type": "string"
                            },
                            "blocking": {
                              "type": "boolean"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "success_criteria": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "timeline": {
                  "type": "object",
                  "properties": {
                    "start": {
                      "type": "string"
                    },
                    "target_completion": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["apiVersion", "kind", "metadata", "spec"]
}
