# OSSA Configuration
NODE_ENV=development
PORT=3000
WEBSOCKET_PORT=3001
METRICS_PORT=3002

# Logging
LOG_LEVEL=INFO
DEBUG=ossa:*

# Database
DATABASE_URL=postgresql://ossa:password@postgres:5432/ossa

# Redis
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here

# External Services
AGENT_BUILDKIT_URL=http://localhost:3100
LLM_PLATFORM_URL=http://localhost:3200

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000