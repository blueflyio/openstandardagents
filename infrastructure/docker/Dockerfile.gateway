FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    wget \
    curl \
    bash \
    git

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install root dependencies
RUN npm install || true

# Copy source code
COPY . .

# Install and build the CLI package located at src/cli
WORKDIR /app/src/cli
RUN npm install && npm run build

# Return to app root
WORKDIR /app

# Create gateway startup script
RUN cat > /app/start-gateway.sh << 'EOF'
#!/bin/bash
echo "ğŸŒ Starting OSSA Gateway Service v0.1.8..."

# Start the gateway service
./src/cli/bin/ossa serve --port 3000 --host 0.0.0.0

EOF

# Make startup script executable
RUN chmod +x /app/start-gateway.sh

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD wget -qO- http://localhost:3000/health || exit 1

# Start gateway service
CMD ["/app/start-gateway.sh"]