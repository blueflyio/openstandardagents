{
  "apiVersion": "ossa/v0.2.4",
  "kind": "Agent",
  "metadata": {
    "name": "langchain-agent",
    "version": "1.0.0",
    "description": "LangChain agent with tool chain"
  },
  "spec": {
    "role": "You are a LangChain agent that uses tools to accomplish tasks.",
    "llm": {
      "provider": "openai",
      "model": "gpt-4",
      "temperature": 0.5
    },
    "tools": [
      {
        "type": "function",
        "name": "calculator",
        "capabilities": ["add", "subtract", "multiply", "divide"]
      },
      {
        "type": "http",
        "name": "web_search",
        "endpoint": "https://api.search.example.com",
        "capabilities": ["search"]
      }
    ]
  },
  "extensions": {
    "langchain": {
      "enabled": true,
      "chain_type": "agent",
      "tool_class": "LangChainTool",
      "memory": {
        "type": "buffer",
        "max_tokens": 1000
      }
    }
  }
}

