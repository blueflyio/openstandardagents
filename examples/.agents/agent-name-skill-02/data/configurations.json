{
  "description": "Configuration settings for Drupal Module Research Agent",
  "version": "1.0.0",
  "agent_config": {
    "research_depths": {
      "basic": {
        "timeout_minutes": 5,
        "sources": ["drupal.org_metadata"],
        "output_sections": ["overview", "basic_stats"]
      },
      "comprehensive": {
        "timeout_minutes": 15,
        "sources": ["drupal.org_metadata", "documentation", "recent_issues"],
        "output_sections": ["overview", "analysis", "documentation", "community"]
      },
      "exhaustive": {
        "timeout_minutes": 60,
        "sources": ["drupal.org_metadata", "documentation", "all_issues", "git_analysis"],
        "output_sections": ["overview", "analysis", "documentation", "community", "versions"]
      }
    },
    "rate_limiting": {
      "drupal_org": {
        "requests_per_minute": 30,
        "burst_allowance": 10,
        "retry_after_seconds": 60,
        "exponential_backoff": true,
        "max_retries": 3
      },
      "git_repositories": {
        "requests_per_minute": 60,
        "concurrent_connections": 5,
        "timeout_seconds": 30
      }
    },
    "caching": {
      "enabled": true,
      "default_ttl_hours": 24,
      "invalidation_strategy": "smart",
      "cache_keys": [
        "module_metadata",
        "issue_analysis",
        "documentation_parsing",
        "security_status"
      ]
    }
  },
  "output_templates": {
    "overview": {
      "sections": [
        "executive_summary",
        "key_metrics",
        "recommendation",
        "risk_assessment"
      ],
      "format": "markdown"
    },
    "analysis": {
      "sections": [
        "security_assessment",
        "performance_analysis", 
        "architecture_review",
        "best_practices"
      ],
      "format": "markdown"
    },
    "documentation": {
      "sections": [
        "installation",
        "configuration",
        "api_reference",
        "use_cases"
      ],
      "format": "markdown"
    },
    "community": {
      "sections": [
        "issues_summary",
        "maintainer_analysis",
        "community_health",
        "support_quality"
      ],
      "format": "markdown"
    }
  },
  "validation_rules": {
    "module_name": {
      "pattern": "^[a-z_][a-z0-9_]*$",
      "max_length": 50,
      "required": true
    },
    "research_depth": {
      "allowed_values": ["basic", "comprehensive", "exhaustive"],
      "default": "comprehensive"
    },
    "output_format": {
      "allowed_values": ["json", "markdown", "structured_markdown"],
      "default": "structured_markdown"
    }
  },
  "error_handling": {
    "404_pages": "log_and_continue",
    "rate_limits": "exponential_backoff_with_jitter",
    "broken_links": "document_as_issue",
    "timeout_handling": "retry_with_backoff",
    "network_errors": "retry_with_exponential_backoff"
  },
  "security_settings": {
    "user_agent": "TDDAI-Drupal-Research-Agent/1.0 (OAAS-Compliant; +https://llm.bluefly.io)",
    "request_headers": {
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8",
      "Accept-Language": "en-US,en;q=0.5",
      "DNT": "1"
    },
    "ssl_verification": true,
    "follow_redirects": true,
    "max_redirects": 5
  }
}