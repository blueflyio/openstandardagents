{
  "apiVersion": "ossa/v0.2.8",
  "kind": "Agent",
  "metadata": {
    "name": "swarm-agent",
    "version": "1.0.0",
    "description": "OpenAI Agents SDK swarm agent"
  },
  "spec": {
    "role": "You are a helpful AI assistant that can coordinate with other agents to solve complex tasks.",
    "llm": {
      "provider": "openai",
      "model": "gpt-4o",
      "temperature": 0.7
    },
    "tools": [
      {
        "type": "function",
        "name": "search_web",
        "capabilities": [
          {
            "name": "search"
          },
          {
            "name": "retrieve"
          }
        ]
      },
      {
        "type": "function",
        "name": "execute_code",
        "capabilities": [
          {
            "name": "run"
          },
          {
            "name": "evaluate"
          }
        ]
      }
    ]
  },
  "extensions": {
    "openai_agents": {
      "enabled": true,
      "model": "gpt-4o",
      "instructions": "You are a helpful AI assistant that can coordinate with other agents to solve complex tasks.",
      "tools_mapping": [
        {
          "ossa_capability": "search_web",
          "openai_tool_name": "web_search",
          "description": "Search the web for information"
        },
        {
          "ossa_capability": "execute_code",
          "openai_tool_name": "code_executor",
          "description": "Execute Python code safely"
        }
      ],
      "guardrails": {
        "enabled": true,
        "max_tool_calls": 10,
        "timeout_seconds": 300
      },
      "memory": {
        "enabled": true,
        "type": "session",
        "max_messages": 50
      }
    }
  }
}