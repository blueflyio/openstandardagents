{
  "apiVersion": "ossa/v0.3.2",
  "kind": "Agent",
  "metadata": {
    "name": "rag-query-agent",
    "version": "1.0.0",
    "description": "LlamaIndex RAG query engine agent"
  },
  "spec": {
    "role": "You answer questions by retrieving and synthesizing information from a knowledge base.",
    "llm": {
      "provider": "openai",
      "model": "gpt-4",
      "temperature": 0.1
    },
    "tools": []
  },
  "extensions": {
    "llamaindex": {
      "enabled": true,
      "agent_type": "query_engine",
      "llm": {
        "provider": "openai",
        "model": "gpt-4",
        "temperature": 0.1
      },
      "vector_store": {
        "type": "pinecone",
        "config": {
          "index_name": "knowledge-base",
          "environment": "us-east-1"
        }
      },
      "retrieval": {
        "top_k": 5,
        "similarity_top_k": 10
      }
    }
  }
}
