{
  "name": "ossa-agents-workspace",
  "version": "0.1.9",
  "description": "OSSA Agents Workspace - Shared configuration for all agents",
  "private": true,
  "workspaces": [
    "agents/*/",
    "critics/*/",
    "governors/*/",
    "integrators/*/",
    "judges/*/",
    "monitors/*/",
    "orchestrators/*/",
    "workers/*/"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "validate": "npm run validate --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}