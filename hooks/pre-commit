#!/bin/bash
#
# OSSA Pre-Commit Hook
# Validates OSSA manifests and runs quality checks before committing
#

set -e

echo "üîç OSSA Pre-Commit Hook"
echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get list of staged YAML/JSON files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ya?ml|json)$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo "‚úì No OSSA manifest files to validate"
    exit 0
fi

echo "üìã Staged OSSA manifest files:"
echo "$STAGED_FILES" | sed 's/^/  - /'
echo ""

# Check if ossa CLI is available
if command -v ossa &> /dev/null; then
    echo "üîß Validating OSSA manifests..."

    VALIDATION_FAILED=0

    for file in $STAGED_FILES; do
        # Only validate files in examples/ or .agents/ directories
        if [[ "$file" == examples/* ]] || [[ "$file" == */.agents/* ]] || [[ "$file" == *.ossa.* ]]; then
            echo -n "  Validating $file... "

            if ossa validate "$file" &> /dev/null; then
                echo -e "${GREEN}‚úì${NC}"
            else
                echo -e "${RED}‚úó${NC}"
                echo -e "${RED}    Error: Invalid OSSA manifest${NC}"
                VALIDATION_FAILED=1
            fi
        fi
    done

    if [ $VALIDATION_FAILED -eq 1 ]; then
        echo ""
        echo -e "${RED}‚ùå OSSA validation failed!${NC}"
        echo "   Fix the errors above before committing."
        exit 1
    fi

    echo -e "${GREEN}‚úì All OSSA manifests are valid${NC}"
else
    echo -e "${YELLOW}‚ö† OSSA CLI not found - skipping validation${NC}"
    echo "  Install with: npm install -g @bluefly/open-standards-scalable-agents"
fi

echo ""
echo -e "${GREEN}‚úì Pre-commit checks passed${NC}"
exit 0
