{
  "name": "@ossa/platform",
  "version": "0.2.0",
  "description": "OSSA Platform v0.2.0 - Specification Standard & Production Runtime Platform for AI Agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:red": "jest || echo 'Good! Tests failing as expected in TDD Red phase'",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "api:generate": "openapi-typescript src/api/specification.openapi.yml -o src/types/api.ts",
    "api:validate": "swagger-cli validate src/api/specification.openapi.yml",
    "precommit": "npm run lint && npm run test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "ossa",
    "ai-agents",
    "specification",
    "orchestration",
    "runtime",
    "compliance"
  ],
  "author": "Bluefly.io",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}