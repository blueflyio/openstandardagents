{
  "name": "ossa-language-support",
  "displayName": "OSSA (Open Standard for Software Agents)",
  "description": "Language support for OSSA manifest files - the OpenAPI of AI Agents. Provides validation, snippets, and IntelliSense for .ossa.yaml and .ossa.json files.",
  "version": "0.3.3",
  "publisher": "bluefly",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/blueflyio/ossa/openstandardagents"
  },
  "bugs": {
    "url": "https://gitlab.com/blueflyio/ossa/openstandardagents/issues"
  },
  "homepage": "https://openstandardagents.org",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "ossa",
    "ai-agents",
    "kubernetes",
    "yaml",
    "json-schema",
    "openapi",
    "agent-manifest",
    "llm",
    "ai"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ossa-yaml",
        "aliases": [
          "OSSA YAML",
          "ossa"
        ],
        "extensions": [
          ".ossa.yaml",
          ".ossa.yml"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ossa-json",
        "aliases": [
          "OSSA JSON"
        ],
        "extensions": [
          ".ossa.json"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "*.ossa.yaml",
        "url": "https://openstandardagents.org/schemas/v0.3.3/manifest.json"
      },
      {
        "fileMatch": "*.ossa.yml",
        "url": "https://openstandardagents.org/schemas/v0.3.3/manifest.json"
      },
      {
        "fileMatch": "**/manifest.ossa.yaml",
        "url": "https://openstandardagents.org/schemas/v0.3.3/manifest.json"
      },
      {
        "fileMatch": "**/.agents/**/manifest.yaml",
        "url": "https://openstandardagents.org/schemas/v0.3.3/manifest.json"
      },
      {
        "fileMatch": "**/.gitlab/agents/**/manifest.ossa.yaml",
        "url": "https://openstandardagents.org/schemas/v0.3.3/manifest.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.ossa.json",
        "url": "https://openstandardagents.org/schemas/v0.3.3/manifest.json"
      },
      {
        "fileMatch": "**/manifest.ossa.json",
        "url": "https://openstandardagents.org/schemas/v0.3.3/manifest.json"
      }
    ],
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/ossa-snippets.json"
      },
      {
        "language": "ossa-yaml",
        "path": "./snippets/ossa-snippets.json"
      },
      {
        "language": "json",
        "path": "./snippets/ossa-snippets.json"
      },
      {
        "language": "ossa-json",
        "path": "./snippets/ossa-snippets.json"
      }
    ],
    "configuration": {
      "title": "OSSA",
      "properties": {
        "ossa.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OSSA manifest validation"
        },
        "ossa.validation.schemaVersion": {
          "type": "string",
          "default": "v0.3.3",
          "enum": [
            "v0.3.3",
            "v0.3.3",
            "v0.3.0",
            "v0.2.9",
            "v0.2.8"
          ],
          "description": "OSSA schema version to use for validation"
        },
        "ossa.snippets.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OSSA code snippets"
        },
        "ossa.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OSSA diagnostics and warnings"
        }
      }
    },
    "commands": [
      {
        "command": "ossa.validate",
        "title": "OSSA: Validate Manifest"
      },
      {
        "command": "ossa.newAgent",
        "title": "OSSA: New Agent Manifest"
      },
      {
        "command": "ossa.newTask",
        "title": "OSSA: New Task Manifest"
      },
      {
        "command": "ossa.newWorkflow",
        "title": "OSSA: New Workflow Manifest"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "yaml": "^2.3.0"
  }
}
