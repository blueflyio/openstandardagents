{
  "version": "0.1.8",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://gitlab.bluefly.io/api/v4/projects/1553/packages/npm/"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": [
    "packages/*",
    "packages/adapters/*",
    "packages/tools/*",
    "packages/examples/*"
  ],
  "useWorkspaces": true,
  "stream": true,
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.md"
  ]
}