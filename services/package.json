{
  "name": "@bluefly/oaas-services",
  "version": "1.0.0",
  "description": "OpenAPI AI Agents Standard - Complete Universal Services Package with Runtime Translation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:production": "tsc --project tsconfig.prod.json",
    "dev": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "deploy:staging": "echo 'Deploying to staging...' && npm run build:production",
    "deploy:production": "echo 'Deploying to production...' && npm run build:production",
    "validate": "npm run lint && npm run test",
    "docs": "typedoc --out ../public/api-docs src/index.ts"
  },
  "keywords": [
    "ai-agents",
    "oaas",
    "openapi",
    "universal-translator",
    "runtime-bridge",
    "drupal",
    "mcp",
    "langchain",
    "crewai",
    "no-file-modification"
  ],
  "author": "Bluefly LLM Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluefly-ai/openapi-ai-agents-standard.git",
    "directory": "services"
  },
  "homepage": "https://github.com/bluefly-ai/openapi-ai-agents-standard#readme",
  "bugs": {
    "url": "https://github.com/bluefly-ai/openapi-ai-agents-standard/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.5",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "php-parser": "^3.1.5",
    "typescript": "^5.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "nyc": "^15.1.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}