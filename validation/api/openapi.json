{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI AI Agents Validation API",
    "version": "1.0.0",
    "description": "REST API for validating OpenAPI AI Agents Standard specifications, configurations, and compliance frameworks",
    "contact": {
      "name": "OpenAPI AI Agents Consortium",
      "url": "https://github.com/openapi-ai-agents/standard",
      "email": "support@openapi-ai-agents.org"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "x-openapi-ai-agents-standard": {
      "version": "0.1.0",
      "certification_level": "gold",
      "protocols": ["openapi"],
      "compliance": ["ISO_42001_2023", "NIST_AI_RMF_1_0"]
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Development server"
    },
    {
      "url": "https://api.openapi-ai-agents.org/v1",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "getHealth",
        "summary": "Health check endpoint",
        "description": "Returns the health status of the validation API",
        "tags": ["Health"],
        "security": [],
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/validate/openapi": {
      "post": {
        "operationId": "validateOpenAPI",
        "summary": "Validate OpenAPI specification",
        "description": "Validates an OpenAPI 3.1 specification against AI Agents Standard requirements",
        "tags": ["Validation"],
        "x-token-estimate": 800,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OpenAPIValidationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OpenAPIValidationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/validate/agent-config": {
      "post": {
        "operationId": "validateAgentConfig",
        "summary": "Validate agent configuration",
        "description": "Validates agent.yml configuration for deployment readiness",
        "tags": ["Validation"],
        "x-token-estimate": 600,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentConfigValidationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Configuration is valid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AgentConfigValidationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Configuration is invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/validate/compliance": {
      "post": {
        "operationId": "validateCompliance",
        "summary": "Validate compliance frameworks",
        "description": "Validates configuration against government and AI compliance frameworks",
        "tags": ["Validation"],
        "x-token-estimate": 1000,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ComplianceValidationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Compliance validation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ComplianceValidationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Compliance validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/validate/protocols": {
      "post": {
        "operationId": "validateProtocols",
        "summary": "Validate protocol bridges",
        "description": "Validates protocol bridge configurations for interoperability",
        "tags": ["Validation"],
        "x-token-estimate": 700,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProtocolValidationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Protocol validation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProtocolValidationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Protocol validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/estimate/tokens": {
      "post": {
        "operationId": "estimateTokens",
        "summary": "Estimate token usage and costs",
        "description": "Estimates token usage and provides cost projections with optimization recommendations",
        "tags": ["Estimation"],
        "x-token-estimate": 500,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TokenEstimationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token estimation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenEstimationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationErrorResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/frameworks": {
      "get": {
        "operationId": "listFrameworks",
        "summary": "List available compliance frameworks",
        "description": "Returns a list of all supported compliance frameworks",
        "tags": ["Reference"],
        "security": [],
        "responses": {
          "200": {
            "description": "Frameworks retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FrameworksResponse"
                }
              }
            }
          }
        }
      }
    },
    "/protocols": {
      "get": {
        "operationId": "listProtocols",
        "summary": "List supported protocols",
        "description": "Returns a list of all supported protocol bridges",
        "tags": ["Reference"],
        "security": [],
        "responses": {
          "200": {
            "description": "Protocols retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProtocolsResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "API key for authentication"
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Authentication required",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "API key required"
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy", "degraded", "unhealthy"]
          },
          "version": {
            "type": "string"
          },
          "services": {
            "type": "object",
            "properties": {
              "validation": {
                "type": "string"
              },
              "compliance": {
                "type": "string"
              },
              "estimation": {
                "type": "string"
              }
            }
          },
          "uptime": {
            "type": "number"
          }
        }
      },
      "OpenAPIValidationRequest": {
        "type": "object",
        "required": ["specification"],
        "properties": {
          "specification": {
            "type": "object",
            "description": "OpenAPI 3.1 specification to validate"
          }
        }
      },
      "OpenAPIValidationResponse": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean"
          },
          "certification_level": {
            "type": "string",
            "enum": ["bronze", "silver", "gold"]
          },
          "passed": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "warnings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "AgentConfigValidationRequest": {
        "type": "object",
        "required": ["configuration"],
        "properties": {
          "configuration": {
            "type": "object",
            "description": "Agent configuration to validate"
          }
        }
      },
      "AgentConfigValidationResponse": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean"
          },
          "readiness_level": {
            "type": "string",
            "enum": ["development", "staging", "production"]
          },
          "passed": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "warnings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "ComplianceValidationRequest": {
        "type": "object",
        "required": ["configuration"],
        "properties": {
          "configuration": {
            "type": "object",
            "description": "Configuration to validate for compliance"
          },
          "frameworks": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Specific frameworks to validate against"
          }
        }
      },
      "ComplianceValidationResponse": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean"
          },
          "authorization_readiness": {
            "type": "string",
            "enum": ["development", "pre-production", "production-ready"]
          },
          "framework_results": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "valid": {
                  "type": "boolean"
                },
                "name": {
                  "type": "string"
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "warnings": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "passed": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "summary": {
            "type": "object",
            "properties": {
              "total_passed": {
                "type": "number"
              },
              "total_warnings": {
                "type": "number"
              },
              "total_errors": {
                "type": "number"
              }
            }
          }
        }
      },
      "ProtocolValidationRequest": {
        "type": "object",
        "required": ["configuration"],
        "properties": {
          "configuration": {
            "type": "object",
            "description": "Configuration with protocol bridges to validate"
          },
          "protocols": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Specific protocols to validate"
          }
        }
      },
      "ProtocolValidationResponse": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean"
          },
          "interoperability_level": {
            "type": "string",
            "enum": ["basic", "standard", "advanced"]
          },
          "protocol_results": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "valid": {
                  "type": "boolean"
                },
                "name": {
                  "type": "string"
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "warnings": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "passed": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "summary": {
            "type": "object",
            "properties": {
              "protocols_validated": {
                "type": "number"
              },
              "total_passed": {
                "type": "number"
              },
              "total_warnings": {
                "type": "number"
              },
              "total_errors": {
                "type": "number"
              }
            }
          }
        }
      },
      "TokenEstimationRequest": {
        "type": "object",
        "required": ["specification"],
        "properties": {
          "specification": {
            "type": "object",
            "description": "OpenAPI specification to analyze for token usage"
          },
          "options": {
            "type": "object",
            "properties": {
              "model": {
                "type": "string",
                "enum": ["gpt-4", "gpt-4-turbo", "gpt-3.5-turbo", "claude-3-opus", "claude-3-sonnet", "claude-3-haiku", "llama-2-70b", "llama-2-13b"],
                "default": "gpt-4-turbo"
              },
              "requestsPerDay": {
                "type": "number",
                "default": 1000
              },
              "compressionRatio": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.7
              }
            }
          }
        }
      },
      "TokenEstimationResponse": {
        "type": "object",
        "properties": {
          "total_tokens": {
            "type": "number"
          },
          "compressed_tokens": {
            "type": "number"
          },
          "cost_projections": {
            "type": "object",
            "properties": {
              "model": {
                "type": "string"
              },
              "daily_cost": {
                "type": "number"
              },
              "monthly_cost": {
                "type": "number"
              },
              "annual_cost": {
                "type": "number"
              },
              "annual_savings": {
                "type": "number"
              },
              "savings_percentage": {
                "type": "number"
              }
            }
          },
          "token_breakdown": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "total_tokens": {
                  "type": "number"
                },
                "operations": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "operation": {
                        "type": "string"
                      },
                      "tokens": {
                        "type": "number"
                      },
                      "description": {
                        "type": "string"
                      },
                      "user_estimate": {
                        "type": "number",
                        "nullable": true
                      }
                    }
                  }
                }
              }
            }
          },
          "optimizations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "recommendation": {
                  "type": "string"
                },
                "potential_savings": {
                  "type": "string"
                },
                "affected_operations": {
                  "type": "number",
                  "nullable": true
                },
                "details": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  },
                  "nullable": true
                }
              }
            }
          }
        }
      },
      "FrameworksResponse": {
        "type": "object",
        "properties": {
          "frameworks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "category": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "requirements": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "ProtocolsResponse": {
        "type": "object",
        "properties": {
          "protocols": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "category": {
                  "type": "string"
                },
                "required_fields": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "optional_fields": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "ValidationErrorResponse": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "string"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "x-openapi-ai-agents-token-management": {
    "provider": "tiktoken",
    "budgets": {
      "per_request": 1000,
      "daily": 100000
    },
    "optimization": {
      "compression": true,
      "semantic_cache": true,
      "batch_processing": true
    }
  },
  "x-openapi-ai-agents-protocol-bridges": {
    "openapi": {
      "enabled": true,
      "version": "3.1.0"
    }
  }
}