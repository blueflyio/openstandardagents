{
  "name": "@openapi-ai-agents/lib",
  "version": "0.1.0",
  "description": "Core validation libraries for OpenAPI AI Agents Standard",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "build": "echo 'No build required'"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "validators/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageReporters": ["text", "lcov", "cobertura"],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/tests/**/*.test.js"
    ]
  }
}