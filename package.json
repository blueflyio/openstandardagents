{
  "name": "ossa-workspace",
  "version": "0.1.9",
  "description": "OSSA v0.1.9 - Open Standards for Scalable Agents Workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf dist coverage",
    "validate": "npm run --workspace=@ossa/validator dev agent .agents/*/agent.yml",
    "install:all": "npm install && npm install --workspaces",
    "postinstall": "npm run build",
    "api:validate": "npx @redocly/cli lint src/api/specification.openapi.yml",
    "api:docs": "npx @redocly/cli preview src/api/ossa-complete.openapi.yml",
    "roadmap:parse": "npm run --workspace=@ossa/roadmap-bridge parse",
    "roadmap:sync": "npm run --workspace=@ossa/roadmap-bridge sync",
    "roadmap:aggregate": "npm run --workspace=@ossa/roadmap-bridge aggregate",
    "roadmap:validate": "npm run --workspace=@ossa/validator dev roadmap",
    "roadmap:export": "npm run --workspace=@ossa/roadmap-bridge export",
    "roadmap:parse-glab": "glab api projects/$CI_PROJECT_ID/issues | npm run roadmap:parse --from-stdin"
  },
  "keywords": [
    "ossa",
    "specification",
    "standard",
    "openapi",
    "ai-agents",
    "acdl",
    "protocol"
  ],
  "author": "Bluefly.io",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "swagger-ui-express": "^5.0.0",
    "table": "^6.9.0",
    "uuid": "^9.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@redocly/cli": "^2.1.5",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "core-js": "^3.45.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
