{
  "name": "@bluefly/openstandardagents.org",
  "version": "0.3.3",
  "description": "Community platform, website, and Discord integration for Open Standard Agents",
  "type": "module",
  "private": true,
  "workspaces": [
    "website",
    "bots/ossa-discord"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "sync:spec": "pnpm --filter website sync:spec",
    "sync:schema": "pnpm --filter website sync:schema",
    "sync:examples": "pnpm --filter website sync:examples",
    "website:dev": "pnpm --filter website dev",
    "website:build": "pnpm --filter website build",
    "bot:dev": "pnpm --filter bots/ossa-discord dev",
    "bot:start": "pnpm --filter bots/ossa-discord start",
    "typecheck": "pnpm -r typecheck",
    "generate:zod": "tsx src/cli/index.ts generate zod",
    "generate:openapi-zod": "tsx src/cli/index.ts generate openapi-zod",
    "generate:types": "tsx src/cli/index.ts generate types",
    "generate:all": "tsx src/cli/index.ts generate all",
    "docs:generate": "tsx src/tools/docs/unified-doc-generator.ts",
    "validate:all": "tsx src/cli/index.ts validate .gitlab/agents/**/*.ossa.yaml examples/**/*.ossa.yaml",
    "version:sync": "tsx src/tools/version/unified-version-sync.ts",
    "config:generate": "tsx src/tools/generators/unified-config-generator.ts",
    "agent:generate": "tsx src/tools/generators/enhanced-agent-generator.ts",
    "migrate": "tsx migrations/index.ts migrate",
    "migrate:check": "tsx migrations/index.ts check",
    "migrate:dry": "tsx migrations/index.ts dry-run",
    "postinstall": "tsx migrations/index.ts migrate",
    "extension:team": "tsx src/cli/index.ts extension-team",
    "extension:team:spawn": "tsx src/cli/index.ts extension-team spawn"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/blueflyio/ossa/openstandardagents.org.git"
  },
  "keywords": [
    "ossa",
    "agents",
    "discord",
    "community",
    "ai"
  ],
  "author": "BlueFly.io",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.4",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  }
}
