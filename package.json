{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.9",
  "description": "OSSA v0.1.9 - Open Standards for Scalable Agents Specification",
  "type": "module",
  "main": "dist/types/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:eventbus": "jest tests/services/EventBus --verbose",
    "test:eventbus:watch": "jest tests/services/EventBus --watch",
    "test:integration": "jest tests/services/EventBus/integration.test.ts --verbose",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "api:generate": "openapi-typescript src/api/specification.openapi.yml -o src/types/api.ts",
    "api:validate": "swagger-cli validate src/api/specification.openapi.yml",
    "validate:specs": "npm run api:validate && npm run validate:schemas",
    "validate:schemas": "ajv compile -s src/api/*.json",
    "mock:server:bg": "PORT=${PORT:-3001} node dist/server/simple-app.js &",
    "test:with-mock": "MOCK_MODE=true npm test",
    "precommit": "npm run lint && npm run test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "ossa",
    "specification",
    "standard",
    "openapi",
    "ai-agents",
    "acdl",
    "protocol"
  ],
  "author": "Bluefly.io",
  "license": "MIT",
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/swagger-ui-express": "^4.1.8",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/express": "^4.17.23",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.6",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
