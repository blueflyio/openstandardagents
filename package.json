{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.9",
  "description": "Open Standards for Scalable Agents (OSSA) - Research-enhanced specification for universal AI agent interoperability with ACTA and memory systems integration",
  "type": "module",
  "workspaces": [
    "src/cli"
  ],
  "bin": {
    "ossa": "./src/cli/bin/ossa"
  },
  "scripts": {
    "build": "npm run build --workspace=src/cli",
    "dev": "npm run dev --workspace=src/cli",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit/",
    "test:api": "vitest run tests/api/",
    "test:cli": "vitest run tests/cli/",
    "test:integration": "vitest run tests/integration/",
    "test:clean": "rimraf coverage test-results.json",
    "test:setup": "npm run services:start:dev",
    "test:teardown": "npm run services:stop",
    "lint": "npm run lint --workspace=src/cli",
    "lint:fix": "npm run lint:fix --workspace=src/cli",
    "typecheck": "npm run typecheck --workspace=src/cli",
    "clean": "npm run clean --workspace=src/cli && find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "validate": "npm run build --workspace=src/cli && ./src/cli/bin/ossa validate",
    "serve": "npm run build --workspace=src/cli && ./src/cli/bin/ossa serve",
    "api:validate": "swagger-codegen validate -i src/api/openapi.yaml",
    "api:generate": "npm run api:generate:types && npm run api:generate:client",
    "api:generate:types": "openapi-typescript src/api/openapi.yaml -o src/cli/src/api/types.ts",
    "api:generate:client": "openapi-typescript-codegen --input src/api/openapi.yaml --output src/cli/src/api/generated",
    "api:docs": "redoc-cli bundle src/api/openapi.yaml --output docs/api.html",
    "services:start": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "services:start:dev": "docker-compose -f infrastructure/docker/docker-compose.yml up -d --build",
    "services:stop": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "services:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "services:status": "npx tsx src/cli/src/index.ts services status",
    "services:health": "npx tsx src/cli/src/index.ts services health",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:check": "echo 'Version check disabled for dual registry setup'",
    "publish:private": "npm publish --registry https://gitlab.bluefly.io/api/v4/projects/1553/packages/npm/",
    "publish:public": "npm publish --registry https://registry.npmjs.org/",
    "publish:safe": "npm run publish:private",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ossa",
    "open-standards",
    "ai-agents",
    "agent-interoperability",
    "vendor-neutral",
    "conformance",
    "governance",
    "mcp",
    "langchain",
    "crewai",
    "openai",
    "anthropic",
    "agent-orchestration",
    "kubernetes-for-ai"
  ],
  "author": "Open Standards for Scalable Agents Community",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/bluefly-ai/ossa-standard.git"
  },
  "homepage": "https://gitlab.com/bluefly-ai/ossa-standard#readme",
  "bugs": {
    "url": "https://gitlab.com/bluefly-ai/ossa-standard/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/cli/",
    "src/lib/",
    "lib/",
    "examples/",
    "docs/",
    "api/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "ROADMAP.md"
  ],
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^14.2.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.2.0",
    "lefthook": "^1.12.3",
    "openapi-typescript": "^6.7.4",
    "openapi-typescript-codegen": "^0.25.0",
    "redoc-cli": "^0.13.21",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
