{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.3",
  "description": "Open Standards for Scalable Agents (OSSA) - Research-enhanced specification for universal AI agent interoperability with ACTA and memory systems integration",
  "main": "lib/cli.js",
  "type": "module",
  "bin": {
    "ossa-validate": "lib/cli.js",
    "ossa-validate-legacy": "lib/tools/validation/validate-ossa-v0.1.2.js"
  },
  "scripts": {
    "validate": "node lib/cli.js",
    "validate:legacy": "node lib/tools/validation/validate-ossa-v0.1.2.js",
    "validate:verbose": "node validate-oaas-v1.3.0.js --verbose",
    "test": "npm run validate examples/",
    "lint": "echo 'No linting configured'",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "build": "echo \"OSSA package ready for publication\""
  },
  "keywords": [
    "ossa",
    "open-standards",
    "ai-agents",
    "agent-interoperability",
    "vendor-neutral",
    "conformance",
    "governance",
    "mcp",
    "langchain",
    "crewai",
    "openai",
    "anthropic",
    "agent-orchestration",
    "kubernetes-for-ai"
  ],
  "author": "Open Standards for Scalable Agents Community",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/bluefly-ai/ossa-standard.git"
  },
  "homepage": "https://gitlab.com/bluefly-ai/ossa-standard#readme",
  "bugs": {
    "url": "https://gitlab.com/bluefly-ai/ossa-standard/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "schemas/",
    "examples/",
    "conformance/",
    "tools/",
    "tests/",
    "docs/",
    "validate-ossa-v0.1.2.js",
    "validate-ossa-v0.1.3.js",
    "validate-oaas-v1.2.0.js",
    "validate-oaas-v1.3.0.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "ROADMAP.md"
  ],
  "dependencies": {
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1"
  }
}
