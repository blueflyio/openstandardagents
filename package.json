{
  "name": "@ossa/standard",
  "version": "0.2.0",
  "description": "OSSA - Open Standard for Scalable Agents. A specification standard for AI agents (like OpenAPI for REST APIs). NOT a framework.",
  "main": "spec/ossa-1.0.schema.json",
  "bin": {
    "ossa": "cli/bin/ossa"
  },
  "scripts": {
