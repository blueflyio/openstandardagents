{
  "name": "@ossa/specification",
  "version": "0.1.9",
  "description": "OSSA v0.1.9 - Open Standards for Scalable Agents Specification",
  "type": "module",
  "main": "dist/types/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "api:generate": "openapi-typescript src/api/specification.openapi.yml -o src/types/api.ts",
    "api:validate": "swagger-cli validate src/api/specification.openapi.yml",
    "validate:specs": "npm run api:validate && npm run validate:schemas",
    "validate:schemas": "node scripts/validate-schemas.cjs",
    "precommit": "npm run lint && npm run test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "ossa",
    "specification",
    "standard",
    "openapi",
    "ai-agents",
    "acdl",
    "protocol"
  ],
  "author": "Bluefly.io",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
