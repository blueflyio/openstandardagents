{
  "name": "@bluefly/openstandardagents.org",
  "version": "0.3.3",
  "description": "Community platform, website, and Discord integration for Open Standard Agents",
  "type": "module",
  "private": true,
  "workspaces": [
    "website",
    "bots/ossa-discord"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "sync:spec": "pnpm --filter website sync:spec",
    "sync:schema": "pnpm --filter website sync:schema",
    "sync:examples": "pnpm --filter website sync:examples",
    "website:dev": "pnpm --filter website dev",
    "website:build": "pnpm --filter website build",
    "bot:dev": "pnpm --filter bots/ossa-discord dev",
    "bot:start": "pnpm --filter bots/ossa-discord start",
    "typecheck": "pnpm -r typecheck",
    "generate:zod": "node --loader ts-node/esm scripts/cli/ossa.ts generate zod",
    "generate:openapi-zod": "node --loader ts-node/esm scripts/cli/ossa.ts generate openapi-zod",
    "generate:types": "node --loader ts-node/esm scripts/cli/ossa.ts generate types",
    "generate:all": "node --loader ts-node/esm scripts/cli/ossa.ts generate all"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/blueflyio/ossa/openstandardagents.org.git"
  },
  "keywords": [
    "ossa",
    "agents",
    "discord",
    "community",
    "ai"
  ],
  "author": "BlueFly.io",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.4",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
