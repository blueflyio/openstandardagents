{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.8",
  "description": "Open Standards for Scalable Agents (OSSA) - Research-enhanced specification for universal AI agent interoperability with ACTA and memory systems integration",
  "private": true,
  "type": "module",
  "workspaces": [
    "cli"
  ],
  "bin": {
    "ossa": "./cli/bin/ossa"
  },
  "scripts": {
    "build": "npm run build --workspace=cli",
    "dev": "npm run dev --workspace=cli", 
    "test": "npm run test --workspace=cli",
    "lint": "npm run lint --workspace=cli",
    "clean": "npm run clean --workspace=cli && find . -name 'node_modules' -type d -prune -exec rm -rf {} +",
    "validate": "npm run build --workspace=cli && ./cli/bin/ossa validate",
    "serve": "npm run build --workspace=cli && ./cli/bin/ossa serve",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:check": "node ../common_npm/scripts/version-control.js",
    "publish:safe": "node ../common_npm/scripts/safe-publish.js",
    "prepublishOnly": "npm run version:check"
  },
  "keywords": [
    "ossa",
    "open-standards",
    "ai-agents",
    "agent-interoperability",
    "vendor-neutral",
    "conformance",
    "governance",
    "mcp",
    "langchain",
    "crewai",
    "openai",
    "anthropic",
    "agent-orchestration",
    "kubernetes-for-ai"
  ],
  "author": "Open Standards for Scalable Agents Community",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/bluefly-ai/ossa-standard.git"
  },
  "homepage": "https://gitlab.com/bluefly-ai/ossa-standard#readme",
  "bugs": {
    "url": "https://gitlab.com/bluefly-ai/ossa-standard/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "cli/",
    "lib/",
    "examples/",
    "docs/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "ROADMAP.md"
  ],
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^14.2.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  }
}
