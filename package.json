{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.9",
  "description": "OSSA Platform v0.1.9 - Specification Standard & Production Runtime Platform for AI Agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:red": "jest || echo 'Good! Tests failing as expected in TDD Red phase'",
    "test:acdl": "jest test/api/acdl-*.spec.ts",
    "test:acdl:watch": "jest --watch test/api/acdl-*.spec.ts",
    "test:failing": "npm run test:red",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "api:generate": "openapi-typescript src/api/specification.openapi.yml -o src/types/api.ts",
    "api:validate": "swagger-cli validate src/api/specification.openapi.yml",
    "precommit": "npm run lint && npm run test",
    "clean": "rm -rf dist coverage",
    "mock:server": "tsx test/mocks/acdl-mock-server.ts",
    "mock:server:bg": "tsx test/mocks/acdl-mock-server.ts &",
    "agents:spawn:tdd": "node dist/cli/commands/agents.js spawn --type development --phase implementation --tdd --api-first --priority high",
    "agents:spawn:validation": "node dist/cli/commands/agents.js spawn --type validation --phase review --priority critical --ossa",
    "agents:spawn:orchestration": "node dist/cli/commands/agents.js spawn --type orchestration --phase planning --priority high --ossa",
    "agents:workload": "node dist/cli/commands/agents.js workload",
    "agents:list": "node dist/cli/commands/agents.js list",
    "dev:with-agents": "npm run mock:server:bg && npm run dev",
    "test:with-mock": "OSSA_API_URL=http://localhost:3001 npm run test:acdl",
    "orchestrator:start": "tsx src/cli/orchestrator-platform.ts start --mock-agents",
    "orchestrator:status": "tsx src/cli/orchestrator-platform.ts status",
    "orchestrator:test": "tsx src/cli/orchestrator-platform.ts test-workflow",
    "orchestrator:health": "tsx src/cli/orchestrator-platform.ts health",
    "registry:start": "tsx src/cli/registry-core.ts start",
    "registry:status": "tsx src/cli/registry-core.ts status",
    "registry:test": "tsx src/cli/registry-core.ts test-register",
    "registry:metrics": "tsx src/cli/registry-core.ts metrics",
    "platform:start": "tsx src/index.ts",
    "platform:production": "NODE_ENV=production tsx src/index.ts",
    "cli": "tsx src/cli/index.ts",
    "ossa": "tsx src/cli/index.ts"
  },
  "bin": {
    "ossa": "./dist/cli/index.js",
    "ossa-orchestrator": "./dist/cli/orchestrator-platform.js",
    "ossa-registry": "./dist/cli/registry-core.js"
  },
  "keywords": [
    "ossa",
    "ai-agents",
    "specification",
    "orchestration",
    "runtime",
    "compliance"
  ],
  "author": "Bluefly.io",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.6.7",
    "uuid": "^9.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
