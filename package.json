{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.2.2",
  "description": "OSSA - Open Standard for Scalable Agents. A specification standard for AI agents (like OpenAPI for REST APIs). NOT a framework.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ossa": "bin/ossa"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./validation": {
      "types": "./dist/services/validation.service.d.ts",
      "import": "./dist/services/validation.service.js",
      "require": "./dist/services/validation.service.js"
    },
    "./generation": {
      "types": "./dist/services/generation.service.d.ts",
      "import": "./dist/services/generation.service.js",
      "require": "./dist/services/generation.service.js"
    },
    "./migration": {
      "types": "./dist/services/migration.service.d.ts",
      "import": "./dist/services/migration.service.js",
      "require": "./dist/services/migration.service.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./schema": "./spec/v0.2.2/ossa-0.2.2.schema.json"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.bluefly.io/llm/openapi-ai-agents-standard.git"
  },
  "bugs": {
    "url": "https://gitlab.bluefly.io/llm/openapi-ai-agents-standard/-/issues"
  },
  "homepage": "https://gitlab.bluefly.io/llm/openapi-ai-agents-standard",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r spec dist/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist coverage",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "validate:schema": "ajv validate -s spec/v0.2.2/ossa-0.2.2.schema.json",
    "validate:examples": "node -r ts-node/register tests/integration/examples/validate-all-examples.test.ts",
    "validate:power-suite": "ts-node bin/validate-ossa-0.2.2.ts",
    "gen:types": "json-schema-to-typescript spec/v0.2.2/ossa-0.2.2.schema.json > src/types/generated/ossa-v0.2.2.types.ts",
    "gen:zod": "json-schema-to-zod spec/v0.2.2/ossa-0.2.2.schema.json > src/types/generated/ossa-v0.2.2.zod.ts",
    "gen:all": "npm run gen:types && npm run gen:zod",
    "cli:legacy": "node cli/bin/ossa --help",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "ossa",
    "ai-agents",
    "openapi",
    "standard",
    "kubernetes",
    "kagent",
    "cli",
    "validation",
    "agent-generation"
  ],
  "author": "OSSA Standards Team",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "glob": "^11.0.3",
    "inversify": "^7.10.3",
    "reflect-metadata": "^0.2.2",
    "yaml": "^2.3.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/gitlab": "^13.2.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.19",
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.10",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "axios": "^1.12.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "json-schema-to-zod": "^2.6.1",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
