{
  "name": "@bluefly/open-standards-scalable-agents",
  "version": "0.1.9",
  "description": "Open Standards Scalable Agents (OSSA) v0.1.9 - Pure Specification Standard for AI Agent Systems",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "api:validate": "swagger-cli validate src/api/specification.openapi.yml",
    "api:generate": "openapi-typescript src/api/specification.openapi.yml -o src/types/api.ts",
    "clean": "rm -rf dist coverage",
    "precommit": "npm run lint && npm run api:validate && npm run test",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run api:validate",
    "pack:test": "npm pack --dry-run"
  },
  "keywords": [
    "ossa",
    "ai-agents",
    "specification",
    "openapi",
    "standards",
    "interoperability"
  ],
  "author": "Bluefly.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.bluefly.io/llm/openapi-ai-agents-standard.git"
  },
  "bugs": {
    "url": "https://gitlab.bluefly.io/llm/openapi-ai-agents-standard/-/issues"
  },
  "homepage": "https://gitlab.bluefly.io/llm/openapi-ai-agents-standard",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
