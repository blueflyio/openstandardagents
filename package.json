{
  "name": "@openapi-ai-agents/standard",
  "version": "0.2.0",
  "description": "Universal standard for AI agent interoperability across all frameworks",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node services/validation-api/server.js",
    "dev": "concurrently \"npm run dev:validation-api\" \"npm run dev:toolkit\"",
    "dev:validation-api": "cd services/validation-api && npm run dev",
    "dev:toolkit": "cd services/universal-agent-toolkit && npm run dev",
    
    "test": "npm run test:unit && npm run test:integration && npm run test:compliance",
    "test:unit": "jest --testPathPattern=__tests__ --testNamePattern='unit|basic'",
    "test:integration": "jest --testPathPattern=__tests__ --testNamePattern='integration'",
    "test:compliance": "jest --testPathPattern=__tests__ --testNamePattern='compliance'",
    "test:validation-api": "cd services/validation-api && npm test",
    "test:dual-format": "jest --testPathPattern=dual-format-validator.test.js",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "test:coverage:report": "npm run test:coverage && open coverage/lcov-report/index.html",
    "test:watch": "jest --watch",
    "test:performance": "jest --testPathPattern=__tests__ --testNamePattern='performance'",
    "test:load": "artillery run tests/load/load-test.yml",
    "test:api": "cd services/validation-api && npm run test:api",
    "test:endpoints": "cd services/validation-api && npm run test:endpoints",
    
    "lint": "eslint . --ext .js,.ts,.mjs",
    "lint:fix": "eslint . --ext .js,.ts,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    
    "validate": "npm run validate:schemas && npm run validate:openapi && npm run validate:agents",
    "validate:schemas": "node scripts/validate-schemas.js",
    "validate:openapi": "node scripts/validate-openapi-specs.js",
    "validate:agents": "node scripts/validate-example-agents.js",
    
    "compliance": "npm run compliance:iso42001 && npm run compliance:nist-rmf && npm run compliance:eu-ai-act",
    "compliance:iso42001": "node scripts/compliance-iso42001.js",
    "compliance:nist-rmf": "node scripts/compliance-nist-rmf.js",
    "compliance:eu-ai-act": "node scripts/compliance-eu-ai-act.js",
    "compliance:report": "node scripts/generate-compliance-report.js",
    "compliance:risk-assessment": "node scripts/risk-assessment.js",
    "compliance:transparency": "node scripts/transparency-check.js",
    
    "security": "npm run security:scan && npm run security:maestro && npm run security:threat-modeling",
    "security:scan": "node scripts/security-scan.js",
    "security:maestro": "node scripts/maestro-assessment.js",
    "security:threat-modeling": "node scripts/threat-modeling.js",
    
    "quality": "npm run quality:check && npm run quality:metrics",
    "quality:check": "node scripts/quality-check.js",
    "quality:strict": "node scripts/quality-strict.js",
    "quality:metrics": "node scripts/quality-metrics.js",
    
    "docs": "npm run docs:generate && npm run docs:validate",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    
    "report": "npm run report:compliance && npm run report:security && npm run report:quality",
    "report:compliance": "node scripts/report-compliance.js",
    "report:security": "node scripts/report-security.js",
    "report:quality": "node scripts/report-quality.js",
    
    "build": "npm run build:services && npm run build:docs",
    "build:services": "cd services/validation-api && npm run build && cd ../universal-agent-toolkit && npm run build",
    "build:docs": "npm run docs:generate",
    
    "clean": "rimraf dist build coverage test-results compliance-reports security-reports performance-reports",
    "prepublishOnly": "npm run test && npm run compliance && npm run security",
    
    "setup": "npm install && npm run setup:services",
    "setup:services": "cd services/validation-api && npm install && cd ../universal-agent-toolkit && npm install",
    
    "demo": "node scripts/demo.js",
    "demo:validation": "node scripts/demo-validation.js",
    "demo:compliance": "node scripts/demo-compliance.js",
    
    "benchmark": "node scripts/benchmark.js",
    "benchmark:validation": "node scripts/benchmark-validation.js",
    "benchmark:compliance": "node scripts/benchmark-compliance.js"
  },
  "keywords": [
    "openapi",
    "ai-agents",
    "standard",
    "validation",
    "compliance",
    "iso42001",
    "nist-rmf",
    "eu-ai-act",
    "maestro",
    "security",
    "governance",
    "interoperability"
  ],
  "author": "OpenAPI AI Agents Consortium",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.bluefly.io/llm/openapi-ai-agents-standard.git"
  },
  "bugs": {
    "url": "https://gitlab.bluefly.io/llm/openapi-ai-agents-standard/-/issues"
  },
  "homepage": "https://openapi-ai-agents.org",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0",
    "tiktoken": "^1.0.10",
    "chalk": "^4.1.2",
    "winston": "^3.10.0",
    "swagger-ui-express": "^5.0.0",
    "compression": "^1.7.4",
    "axios": "^1.6.0",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "commander": "^11.1.0",
    "ora": "^7.0.1",
    "table": "^6.8.1",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "jest": "^29.6.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "@types/jest": "^29.5.3",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.1",
    "artillery": "^2.0.0",
    "benchmark": "^2.1.4",
    "faker": "^6.6.6",
    "mock-express-request": "^0.2.0",
    "mock-express-response": "^0.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "scripts/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/build/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "cobertura"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist",
      "build"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "workspaces": [
    "services/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "services/",
    "examples/",
    "docs/",
    "scripts/",
    "*.md",
    "*.yml",
    "*.yaml"
  ]
}
